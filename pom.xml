        <maven-checkstyle-plugin.failsOnError>true</maven-checkstyle-plugin.failsOnError>
        <maven-checkstyle-plugin.failsOnWarning>false</maven-checkstyle-plugin.failsOnWarning>
        <javadoc.failOnError>false</javadoc.failOnError>
        <javadoc.failOnWarnings>false</javadoc.failOnWarnings>
        <surefire.rerunFailingTestsCount>2</surefire.rerunFailingTestsCount> <!-- Aligns with what we had in Gradle -->
